<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <TextView
        android:id="@+id/time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/currentX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" />

        <TextView
            android:id = "@+id/currentY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"/>

         <TextView
            android:id = "@+id/currentZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="60dp"
             android:layout_marginLeft="0dp"
             android:layout_marginRight="10dp"/>

        <TextView
            android:id = "@+id/currentGx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"/>

    <TextView
        android:id = "@+id/currentGy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id = "@+id/currentGz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:onClick="onClickPredict"
            android:text="Predict" />

        <ToggleButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/btn_radio"
            android:checked="false"
            android:clickable="true"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:onClick="onClickButton"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="@string/start"
            android:textOff=" "
            android:textOn=" "
            android:layout_gravity="center"/>

    </LinearLayout>

</androidx.wear.widget.BoxInsetLayout>